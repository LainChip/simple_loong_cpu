{
    "const": {
        "_BRANCH_INVALID": "2'b00",
        "_BRANCH_IMMEDIATE": "2'b01",
        "_BRANCH_INDIRECT": "2'b10",
        "_BRANCH_CONDITION": "2'b11",

        "_CMP_EQL": "3'd0",
        "_CMP_NEQ": "3'd1",
        "_CMP_LSS": "3'd2",
        "_CMP_GER": "3'd3",
        "_CMP_LEQ": "3'd4",
        "_CMP_GEQ": "3'd5",
        "_CMP_LTU": "3'd6",
        "_CMP_GEU": "3'd7"
    },
    
    "signal": {
       	"branch_type": {
            "length": 2,
            "stage": "ex",
            "default_value": 0,
            "invalid_value": 0
        },

        "cmp_type": {
            "length": 3,
            "stage": "ex",
            "default_value": 0,
            "invalid_value": 0
        },

        "branch_link": {
            "length": 1,
            "stage": "ex",
            "default_value": 0,
            "invalid_value": 0
        }
    },
    
    "inst": {
        "jirl": {
            "opcode": "010011",
            "branch_type": "`_BRANCH_INDIRECT",
            "reg_type": "`_REG_TYPE_RW",
            "ready_time": "`_READY_EX",
            "use_time": "`_USE_EX"
        },
        "b": {
            "opcode": "010100",
            "branch_type": "`_BRANCH_IMMEDIATE",
            "reg_type": "`_REG_TYPE_I"
        },
        "bl": {
            "opcode": "010101",
            "branch_type": "`_BRANCH_IMMEDIATE",
            "reg_type": "`_REG_TYPE_BL",
            "ready_time": "`_READY_EX",
            "branch_link": 1
        },
        "beq": {
            "opcode": "010110",
            "branch_type": "`_BRANCH_CONDITION",
            "reg_type": "`_REG_TYPE_RR",
            "use_time": "{`_USE_EX, `_USE_EX}",
            "cmp_type": "`_CMP_EQL"
        },
        "bne": {
            "opcode": "010111",
            "branch_type": "`_BRANCH_CONDITION",
            "reg_type": "`_REG_TYPE_RR",
            "use_time": "{`_USE_EX, `_USE_EX}",
            "cmp_type": "`_CMP_NEQ"
        },
        "blt": {
            "opcode": "011000",
            "branch_type": "`_BRANCH_CONDITION",
            "reg_type": "`_REG_TYPE_RR",
            "use_time": "{`_USE_EX, `_USE_EX}",
            "cmp_type": "`_CMP_LSS"
        },
        "bge": {
            "opcode": "011001",
            "branch_type": "`_BRANCH_CONDITION",
            "reg_type": "`_REG_TYPE_RR",
            "use_time": "{`_USE_EX, `_USE_EX}",
            "cmp_type": "_CMP_GER"
        },
        "bltu": {
            "opcode": "011010",
            "branch_type": "`_BRANCH_CONDITION",
            "reg_type": "`_REG_TYPE_RR",
            "use_time": "{`_USE_EX, `_USE_EX}",
            "cmp_type": "`_CMP_LTU"
        },
        "bgeu": {
            "opcode": "011011",
            "branch_type": "`_BRANCH_CONDITION",
            "reg_type": "`_REG_TYPE_RR",
            "use_time": "{`_USE_EX, `_USE_EX}",
            "cmp_type": "`_CMP_GEU"
        }
    }
}